<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/test3"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:layout_marginBottom="15dp"
            android:id="@+id/btnVolverJuegoLista"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableEnd="@drawable/return_icon_154912"
            android:backgroundTint="@color/buttonLogHard"/>
            />

        <Button
            android:id="@+id/btnNuevoJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVO JUEGO"
            android:backgroundTint="@color/buttonLogHard"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJuego"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>